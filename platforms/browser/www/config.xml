<?xml version='1.0' encoding='utf-8'?>
<widget id="com.reminder" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Reminder</name>
    <description>
        Simply a reminder app.
    </description>
    <author email="lamkiyinkenny2001@gmail.com">
        Kenny
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/logo.png" />
</widget>
